@import 'colors';

body {
  font-family: Avenir, Helvetica, sans-serif;
  font-weight: 300;
  letter-spacing: 0.382pt;
  margin: 0;
  padding: 0;
  background-color: $vitruvian-background-color;
}

h1 {
  font-size: 1.618rem;
}

h2 {
  font-size: 1.618rem;
}

h3, h4 {
  font-size: 1rem;
}

.spread {
  margin: 0;
  padding: 0;
  background-color: $vitruvian-background-color;
  background: url(asset_path('vitruvian')) center -25px repeat-y;
  overflow: auto;
  overflow: -moz-scrollbars-none;
  min-height: 100%;

  > header, > footer, .main.row {
    margin: 0.5rem auto;
    max-width: 90%;
    padding: 2rem;
    background: $content-background-color;

    &:first-child {
      margin-top: 2rem;
    }

    &:last-child {
      margin-bottom: 2rem;
    }
  }
}

header.global {
  h1.name {
    font-size: 1.382rem;
    letter-spacing: 1rem;
    color: black;
    text-decoration: none;
    font-weight: 300;
    text-align: center;

    a {
      text-decoration: none;
    }
  }
}

.main.row {
  > * {
  }

  nav {
    ul {
      margin: 1em 0;
      padding: 0;
      text-align: left;

      li {
        list-style-type: none;
        padding-left: none;
        font-size: 0.85rem;
        font-weight: 500;

        a {
          font-weight: 200;
        }
      }
    }
  }
}

footer {
  ul.contact-methods {
    text-align: center;
    li {
      list-style-type: none;
      padding-left: none;
      font-size: 0.85rem;
    }
  }
}

.work-of-art-title {
  font-style: italic;
}

.quote {
  margin: 1rem 0;

  .attribution {
    &::before {
      content: '- ';
    }
  }
}
.about__content-header {
  margin: 1rem 0;
  padding: 8rem 2rem 2rem 2rem;
  text-align: right;
  text-shadow: 2px 2px $vitruvian-background-color;
  font-size: 2rem;
  color: white;
  background-color: #555555;
  background: url(asset_path('stories/rob_head.jpg')) center 0px;
  background-size: cover;
  overflow: auto;
  overflow: -moz-scrollbars-none;
  height: 200px;
}

.about__image-container {
  width: 50%;

  &--right {
    float: right;
    margin: 0 0 1rem 1rem;
  }

  &--left {
    float: left;
    margin: 0 1rem 1rem 0;
  }
}

.about__work-sample-container {
  display: flex;
}

.about__work-sample {
  flex: 1;
}
